<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="org.eclipse.e4.ui.css.core.propertyHandler">
      <handler
            adapter="org.eclipse.ui.gtk.DarkThemeElement"
            composite="false"
            handler="org.eclipse.ui.gtk.DarkThemeChangeHandler">
         <property-name
               name="is-dark">
         </property-name>
      </handler>
   </extension>
   <extension
         point="org.eclipse.e4.ui.css.core.elementProvider">
      <provider
            class="org.eclipse.ui.gtk.DarkThemeElementProvider">
         <widget
               class="org.eclipse.swt.widgets.Shell">
         </widget>
      </provider>
   </extension>

</fragment>
