<plugin>
   <extension-point
      id="logger"
      name="%UiFreezeEventLogger.name"
      schema="schema/org.eclipse.ui.monitoring.logger.exsd"/>

   <extension point="org.eclipse.ui.startup">
      <startup class="org.eclipse.ui.internal.monitoring.MonitoringStartup"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipse.ui.internal.monitoring.preferences.MonitoringPreferenceInitializer">
      </initializer>
      <initializer
            class="org.eclipse.ui.internal.monitoring.preferences.CancelabilityMonitorPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.ui.monitoring.main"
            class="org.eclipse.ui.internal.monitoring.preferences.MonitoringPreferencePage"
            id="org.eclipse.ui.monitoring.page"
            name="%UIResponsivenessMonitoringPreferencePage.name">
      </page>
      <page
            category="org.eclipse.ui.monitoring.main"
            class="org.eclipse.ui.internal.monitoring.preferences.CancelabilityPreferencePage"
            id="org.eclipse.ui.monitoring.job.page"
            name="%TaskMonitoringPreferencePage.name">
         <keywordReference
               id="org.eclipse.ui.monitoring.keyword.background">
         </keywordReference>
         <keywordReference
               id="org.eclipse.ui.monitoring.keyword.cancelation">
         </keywordReference>
         <keywordReference
               id="org.eclipse.ui.monitoring.keyword.job">
         </keywordReference>
      </page>
      <page
            category="org.eclipse.ui.preferencePages.Workbench"
            class="org.eclipse.ui.internal.monitoring.preferences.MonitoringMainPreferencePage"
            id="org.eclipse.ui.monitoring.main"
            name="%MonitoringPreferencePage.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.keywords">
      <keyword
            id="org.eclipse.ui.monitoring.keyword.background"
            label="%MonitoringKeyword.background">
      </keyword>
      <keyword
            id="org.eclipse.ui.monitoring.keyword.cancelation"
            label="%MonitoringKeyword.cancelation">
      </keyword>
      <keyword
            id="org.eclipse.ui.monitoring.keyword.job"
            label="%MonitoringKeyword.job">
      </keyword>
   </extension>
</plugin>
